{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "server": {
      "type": "object",
      "required": ["host", "port", "namespace"],
      "properties": {
        "host":{
          "type": "string",
          "default": "localhost"
        },
        "port": {
          "type": "number",
          "default": 7233
        },
        "namespace": {
          "type": "string",
          "default": "default"
        }
      }
    },
    "workers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/TemporalWorker"
      }
    }
  },
  "required": [
    "workers"
  ],
  "definitions": {
    "TemporalWorker": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "task_queue": {
          "type": "string"
        },
        "workflows": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TemporalTaskStub"
          }
        },
        "activities": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TemporalTaskStub"
          }
        }
      },
      "required": [
        "name",
        "task_queue"
      ]
    },
    "TemporalTaskStub": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "result": {
        },
        "error": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "details": {
            }
          },
          "required": [
            "type"
          ]
        }
      },
      "required": [
        "type"
      ],
      "oneOf": [
        {
          "required": [
            "result"
          ],
          "not": {
            "required": [
              "error"
            ]
          }
        },
        {
          "required": [
            "error"
          ],
          "not": {
            "required": [
              "result"
            ]
          }
        }
      ]
    }
  }
}
